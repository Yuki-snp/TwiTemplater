<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LineModeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="編集モード"
        android:textSize="30sp"
        android:layout_weight="0"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:descendantFocusability="beforeDescendants"
            android:gravity="center_vertical|center"
            android:orientation="vertical"
            android:layout_weight="2"
            android:background="@drawable/listview_frame">
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/final_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/final_button"
                android:textSize="30sp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/Tweet_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tweet_button"
                android:textSize="30sp"
                android:layout_weight="1"/>

            <!--
            <TextView
                android:id="@+id/textSum"
                android:layout_width="160sp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=""
                android:textSize="30sp"
                android:layout_weight="0"/>
             -->
        </LinearLayout>

    </LinearLayout>

</LinearLayout>